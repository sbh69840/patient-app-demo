<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="admin.eoe.squad.patient.LoginActivity">
    <include android:id="@+id/diet_toolbar" layout="@layout/treatment_toolbar"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:paddingTop="70dp"
        android:orientation="vertical"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="300dp"
                android:id="@+id/sub_name"
                android:layout_height="wrap_content"
                android:hint="Medication name"/>
        </android.support.design.widget.TextInputLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@mipmap/icondosage"/>
            <EditText
                android:layout_width="50dp"
                android:layout_marginStart="50dp"
                android:id="@+id/dos_quantity"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_width="wrap_content"
                android:entries="@array/dosage"
                android:layout_marginTop="20dp"
                android:id="@+id/dosage"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="120dp"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@mipmap/iconfrequency"/>
            <Spinner
                android:layout_width="wrap_content"
                android:entries="@array/frequency"
                android:layout_marginTop="20dp"
                android:id="@+id/frequency"
                android:layout_marginStart="70dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@mipmap/icontime"/>
            <Spinner
                android:layout_width="wrap_content"
                android:entries="@array/time"
                android:layout_marginTop="20dp"
                android:id="@+id/time"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@mipmap/iconcalendar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:id="@+id/from_a"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:text="From"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/from"
                android:layout_marginStart="130dp"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:text="Click 'from'"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/to_a"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:text="To"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:layout_marginTop="20dp"
                android:id="@+id/to"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Click 'to'"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@mipmap/iconnotes"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="Take before meal"/>

        </FrameLayout>
        <Button
            android:id="@+id/medic_sub_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_gravity="bottom|center"
            android:textColor="#ffffff"
            android:text="Save" />
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>