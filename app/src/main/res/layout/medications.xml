<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="admin.eoe.squad.patient.LoginActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you taking medications?"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>


        <CheckBox
            android:id="@+id/medic_checkBox"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="Typical Steroid" />
        <CheckBox
            android:id="@+id/medic_checkBox1"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="Inhaler" />
        <CheckBox
            android:id="@+id/medic_checkBox2"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="Slurry" />
        <CheckBox
            android:id="@+id/medic_checkBox3"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="Oral Steroid" />
        <CheckBox
            android:id="@+id/medic_checkBox4"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="Singular" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="256dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/other_medication"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:hint="Others (Separated by commas)"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/medication_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="50dp"
            android:text="Next" />
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>